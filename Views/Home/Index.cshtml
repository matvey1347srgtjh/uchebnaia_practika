    var searchQuery = ViewData["SearchQuery"] as string;
    var hasSearch = !string.IsNullOrWhiteSpace(searchQuery);
    var selectedGenre = ViewData["SelectedGenre"] as string;
    int? selectedMinDuration = ViewData["MinDuration"] as int?;
    int? selectedMaxDuration = ViewData["MaxDuration"] as int?;
    var hasFilters = !string.IsNullOrWhiteSpace(selectedGenre) || selectedMinDuration.HasValue || selectedMaxDuration.HasValue;
    var movies = Model?.Movies ?? new List<CinemaApp.Models.Movie>();
    var heroSlides = Model?.HeroSlides ?? new List<CinemaApp.Models.HeroSlide>();
    var featuredSlides = heroSlides.Take(5).ToList();
}

@if (!hasSearch && featuredSlides.Any())
{
    <section class="kp-hero fade-in">
        <div class="kp-hero__slides" data-autoplay="6000">
            @for (var i = 0; i < featuredSlides.Count; i++)
            {
                var slide = featuredSlides[i];
                var movie = slide.Movie;
                var isActive = i == 0;
                var slideTitle = !string.IsNullOrWhiteSpace(slide.Title)
                    ? slide.Title
                    : (movie?.Title ?? "–ê–Ω–æ–Ω—Å");
                var slideTagline = !string.IsNullOrWhiteSpace(slide.Tagline)
                    ? slide.Tagline
                    : "–°–µ–π—á–∞—Å –≤ –ø—Ä–æ–∫–∞—Ç–µ";
                var baseDescription = !string.IsNullOrWhiteSpace(slide.Description)
                    ? slide.Description
                    : movie?.Description ?? string.Empty;
                var description = baseDescription.Length > 220
                    ? baseDescription.Substring(0, 220) + "..."
                    : baseDescription;
                var buttonText = !string.IsNullOrWhiteSpace(slide.ButtonText)
                    ? slide.ButtonText
                    : "–ü–æ–¥—Ä–æ–±–Ω–µ–µ";
                var buttonUrl = !string.IsNullOrWhiteSpace(slide.ButtonUrl)
                    ? slide.ButtonUrl
                    : (movie != null ? Url.Action("Details", "Movies", new { id = movie.Id }) : "#");

                var videoFile = !string.IsNullOrWhiteSpace(slide.VideoPath)
                    ? slide.VideoPath
                    : movie?.TrailerUrl;
                var videoSource = !string.IsNullOrWhiteSpace(videoFile)
                    ? (videoFile.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                        ? videoFile
                        : Url.Content($"~/videos/{videoFile}"))
                    : null;
                var posterSource = !string.IsNullOrWhiteSpace(slide.PosterUrl)
                    ? slide.PosterUrl
                    : movie?.PosterUrl;

                <article id="kp-hero-slide-@i" class="kp-hero__slide @(isActive ? "is-active" : string.Empty)" data-slide-index="@i">
                    <div class="kp-hero__content">
                        <div class="kp-hero__tag">@slideTagline</div>
                        <h2 class="kp-hero__title">@slideTitle</h2>
                        @if (!string.IsNullOrWhiteSpace(movie?.Genre) || movie?.Duration > 0)
                        {
                            <div class="kp-hero__meta">
                                @if (!string.IsNullOrWhiteSpace(movie?.Genre))
                                {
                                    <span>@movie.Genre</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(movie?.Genre) && movie?.Duration > 0)
                                {
                                    <span>‚Ä¢</span>
                                }
                                @if (movie?.Duration > 0)
                                {
                                    <span>@movie.Duration –º–∏–Ω</span>
                                }
                            </div>
                        }
                        <p class="kp-hero__description">@description</p>
                        @if (!string.IsNullOrWhiteSpace(buttonUrl))
                        {
                            <div class="kp-hero__actions">
                                <a href="@buttonUrl" class="btn btn-primary btn-lg">
                                    @buttonText
                                </a>
                            </div>
                        }
                    </div>
                    <div class="kp-hero__media">
                        <div class="kp-hero__media-frame">
                            @if (!string.IsNullOrWhiteSpace(videoSource))
                            {
                                <video class="kp-hero__video" playsinline muted preload="metadata" data-hero-video>
                                    <source src="@videoSource" type="video/mp4" />
                                </video>
                            }
                            else if (!string.IsNullOrWhiteSpace(posterSource))
                            {
                                <img src="@posterSource" alt="@slideTitle" class="kp-hero__poster" />
                            }
                            else
                            {
                                <div class="kp-hero__poster kp-hero__poster--fallback">
                                    <span>@slideTitle.FirstOrDefault()</span>
                                </div>
                            }
                        </div>
                        @if (!string.IsNullOrWhiteSpace(videoSource))
                        {
                            <div class="kp-hero__controls" data-slide-controls="@i">
                                <button type="button"
                                        class="kp-hero__play-toggle"
                                        aria-label="–ü–æ—Å—Ç–∞–≤–∏—Ç—å –Ω–∞ –ø–∞—É–∑—É"
                                        data-slide-play="@i">
                                    <i class="bi bi-pause-fill" aria-hidden="true"></i>
                                </button>
                                <button type="button"
                                        class="kp-hero__sound-toggle"
                                        aria-label="–í–∫–ª—é—á–∏—Ç—å –∑–≤—É–∫"
                                        data-slide-sound="@i">
                                    <i class="bi bi-volume-mute-fill" aria-hidden="true"></i>
                                </button>
                                <div class="kp-hero__volume-wrapper">
                                    <span class="kp-hero__volume-track" aria-hidden="true"></span>
                                    <input type="range"
                                           min="0"
                                           max="1"
                                           step="0.05"
                                           value="0.2"
                                           class="kp-hero__volume"
