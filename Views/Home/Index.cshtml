                <i class="bi bi-chevron-left"></i>
            </button>
            <div class="kp-hero__bullets" role="tablist" aria-label="–í—ã–±–æ—Ä —Å–ª–∞–π–¥–∞">
                @for (var i = 0; i < featuredSlides.Count; i++)
                {
                    <button type="button"
                            class="kp-hero__bullet @(i == 0 ? "is-active" : string.Empty)"
                            data-target-index="@i"
                            role="tab"
                            aria-selected="@(i == 0 ? "true" : "false")"
                            aria-controls="kp-hero-slide-@i">
                        <span class="visually-hidden">–°–ª–∞–π–¥ @(i + 1)</span>
                    </button>
                }
            </div>
            <button type="button" class="kp-hero__arrow kp-hero__arrow--next" aria-label="–°–ª–µ–¥—É—é—â–∏–π —Å–ª–∞–π–¥">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>
    </section>
}

