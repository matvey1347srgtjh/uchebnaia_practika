@model IEnumerable<CinemaApp.Models.Movie>

@{
    ViewData["Title"] = "–ì–ª–∞–≤–Ω–∞—è";
    var searchQuery = ViewData["SearchQuery"] as string;
    var hasSearch = !string.IsNullOrWhiteSpace(searchQuery);
    var selectedGenre = ViewData["SelectedGenre"] as string;
    int? selectedMinDuration = ViewData["MinDuration"] as int?;
    int? selectedMaxDuration = ViewData["MaxDuration"] as int?;
    var hasFilters = !string.IsNullOrWhiteSpace(selectedGenre) || selectedMinDuration.HasValue || selectedMaxDuration.HasValue;
}

<div class="text-center mb-5 fade-in">
    <h1 class="display-4 mb-3">–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –∫–∏–Ω–æ—Ç–µ–∞—Ç—Ä!</h1>
    <p class="lead">üé¨ @(hasSearch ? "–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –ø–æ–∏—Å–∫–∞" : "–°–µ–π—á–∞—Å –≤ –ø—Ä–æ–∫–∞—Ç–µ")</p>
    <div style="height: 4px; width: 100px; background: linear-gradient(90deg, var(--primary-color), var(--secondary-color)); margin: 1rem auto; border-radius: 2px;"></div>
    @if (hasSearch)
    {
        <p class="text">–í—ã –∏—Å–∫–∞–ª–∏: <strong>@searchQuery</strong>. –ù–∞–π–¥–µ–Ω–æ —Ñ–∏–ª—å–º–æ–≤: @Model.Count()</p>
    }
    @if (hasFilters)
    {
        <p class="text mb-0">
            –§–∏–ª—å—Ç—Ä—ã:
            @if (!string.IsNullOrWhiteSpace(selectedGenre))
            {
                <span>–ñ–∞–Ω—Ä ‚Äî <strong>@selectedGenre</strong></span>
            }
            @if (selectedMinDuration.HasValue)
            {
                <span>@(string.IsNullOrWhiteSpace(selectedGenre) ? string.Empty : ", ")–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –æ—Ç <strong>@selectedMinDuration</strong> –º–∏–Ω</span>
            }
            @if (selectedMaxDuration.HasValue)
            {
                <span>@((!string.IsNullOrWhiteSpace(selectedGenre) || selectedMinDuration.HasValue) ? ", " : string.Empty)–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –¥–æ <strong>@selectedMaxDuration</strong> –º–∏–Ω</span>
            }
        </p>
    }
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var movie in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="movie-card">
                    <div class="movie-poster" style="position: relative;"> 
                        
                        @if (!string.IsNullOrEmpty(movie.PosterUrl))
                        {
                            <img src="@movie.PosterUrl" alt="@movie.Title" class="movie-poster-image">
                        }
                        else
                        {
                            <div class="movie-poster-image" style="width: 100%; height: 100%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem;">
                                üé¨
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(movie.TrailerUrl))
                        {
                            <video class="movie-trailer" 
                                   src="@Url.Content($"~/videos/{movie.TrailerUrl}")" 
                                   loop muted playsinline
                                   style="display: none; width: 100%; height: 100%; object-fit: cover; position: absolute; top: 0; left: 0;"></video>
                        }
                        
                    </div>
                    <div class="movie-card-body">
                        <h5 class="movie-title">@movie.Title</h5>
                        <p class="movie-genre">
                            @movie.Genre
                            <span class="movie-duration">@movie.Duration –º–∏–Ω</span>
                        </p>
                        <p class="movie-description">
                            @(movie.Description.Length > 120 ? movie.Description.Substring(0, 120) + "..." : movie.Description)
                        </p>
                        <div class="mt-auto">
                            <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" class="btn btn-primary w-100">
                                –ü–æ–¥—Ä–æ–±–Ω–µ–µ ‚Üí
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    if (hasSearch)
    {
        <div class="alert alert-warning text-center">
            <h4>–ü–æ –∑–∞–ø—Ä–æ—Å—É "@searchQuery" –Ω–∏—á–µ–≥–æ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ</h4>
            <p class="mb-0">–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –∏–∑–º–µ–Ω–∏—Ç—å –∫—Ä–∏—Ç–µ—Ä–∏–∏ –ø–æ–∏—Å–∫–∞ –∏–ª–∏ –ø—Ä–æ—Å–º–æ—Ç—Ä–∏—Ç–µ –≤—Å–µ —Ñ–∏–ª—å–º—ã –≤ –ø—Ä–æ–∫–∞—Ç–µ.</p>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>–ù–∞ –¥–∞–Ω–Ω—ã–π –º–æ–º–µ–Ω—Ç –Ω–µ—Ç —Ñ–∏–ª—å–º–æ–≤ –≤ –ø—Ä–æ–∫–∞—Ç–µ</h4>
            <p class="mb-0">–°–∫–æ—Ä–æ –∑–¥–µ—Å—å –ø–æ—è–≤—è—Ç—Å—è –Ω–æ–≤—ã–µ —Ñ–∏–ª—å–º—ã!</p>
        </div>
    }
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            let hoverTimer;

           
            const movieCards = document.querySelectorAll('.movie-card');

            movieCards.forEach(card => {
               
                const poster = card.querySelector('.movie-poster-image');
                const video = card.querySelector('.movie-trailer');

               
                if (!video) {
                    return;
                }
                
               
                card.addEventListener('mouseenter', () => {
                   
                    hoverTimer = setTimeout(() => {
                        if (poster) {
                            poster.style.display = 'none';
                        }
                        video.style.display = 'block';
                        video.play().catch(error => {
                            console.warn("Autoplay was prevented:", error);
                        });
                    }, 1000); 
                });

               
                card.addEventListener('mouseleave', () => {
                   
                    clearTimeout(hoverTimer);

                   
                    video.pause();
                    video.currentTime = 0;
                    video.style.display = 'none';
                    if (poster) {
                        poster.style.display = 'block';
                    }
                });
            });
        });
    </script>
}