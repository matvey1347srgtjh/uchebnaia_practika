            </video>

            <div id="playCenterIcon" class="play-center-icon">‚ñ∂</div>
        </div>
    }
    
    <div class="mt-5 fade-in">
        <h2 class="mb-4">
            <span style="border-left: 4px solid var(--primary-color); padding-left: 1rem;">
                üé´ –ë–ª–∏–∂–∞–π—à–∏–µ —Å–µ–∞–Ω—Å—ã
            </span>
        </h2>
        @if (Model.Sessions.Any())
        {
