@model CinemaApp.ViewModels.MovieViewModel

@{
    ViewData["Title"] = Model.Title;
}

<style>
    /* 1. –ö–û–ù–¢–ï–ô–ù–ï–† –î–õ–Ø –ì–†–ê–î–ò–ï–ù–¢–ê (–û–•–í–ê–¢–´–í–ê–ï–¢ –¢–û–õ–¨–ö–û –ü–û–°–¢–ï–† –ò –ò–ù–§–û) */
    .info-and-poster-container {
        /* –ï–ª–µ –≤–∏–¥–Ω—ã–π –ö–†–ê–°–ù–´–ô –≥—Ä–∞–¥–∏–µ–Ω—Ç (—Å–ø—Ä–∞–≤–∞ –Ω–∞–ª–µ–≤–æ) */
        background: linear-gradient(
            to left, /* –ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: –°–ø—Ä–∞–≤–∞ –Ω–∞–ª–µ–≤–æ */
            rgba(255, 0, 0, 0.1), /* –ù–∞—á–∞–ª–æ: –ü–æ–ª—É–ø—Ä–æ–∑—Ä–∞—á–Ω—ã–π –∫—Ä–∞—Å–Ω—ã–π */
            rgba(255, 255, 255, 0.05)
             /* –ö–æ–Ω–µ—Ü: –û—á–µ–Ω—å —Å–≤–µ—Ç–ª—ã–π/–ø–æ—á—Ç–∏ –ø—Ä–æ–∑—Ä–∞—á–Ω—ã–π */
        );
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); 
        margin-bottom: 30px; /* –û—Ç—Å—Ç—É–ø –¥–æ –ø–ª–µ–µ—Ä–∞ */
        padding: 20px; /* –í–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π –æ—Ç—Å—Ç—É–ø */
    }
    
    /* –û—Å–Ω–æ–≤–Ω–æ–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä —Å—Ç—Ä–∞–Ω–∏—Ü—ã, —á—Ç–æ–±—ã –¥–æ–±–∞–≤–∏—Ç—å –æ—Ç—Å—Ç—É–ø —Å–≤–µ—Ä—Ö—É */
    .fade-in {
        padding-top: 30px; 
    }

    /* –ê–¥–∞–ø—Ç–∏–≤–Ω—ã–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è –≤–∏–¥–µ–æ: –í–ê–®–ï –ó–ù–ê–ß–ï–ù–ò–ï 52.5% */
    .trailer-responsive-container {
        position: relative; 
        width: 100%; 
        padding-bottom: 52.5%; /* –ò–î–ï–ê–õ–¨–ù–û–ï –ó–ù–ê–ß–ï–ù–ò–ï */
        height: 0; 
        overflow: hidden; 
        margin-bottom: 40px; /* –û—Ç—Å—Ç—É–ø –¥–æ —Å–µ–∞–Ω—Å–æ–≤ */
        
        background: black; 
        border-radius: 5px; 
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* –¢–µ–Ω—å –¥–ª—è –ø–ª–µ–µ—Ä–∞ */
    }
    
    .trailer-responsive-container video {
        position: absolute; 
        top: 0; 
        left: 0; 
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* –ó–Ω–∞—á–æ–∫ –∑–∞–ø—É—Å–∫–∞ –≤ —Ü–µ–Ω—Ç—Ä–µ */
    .play-center-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        cursor: pointer;
        font-size: 5rem;
        opacity: 1;
        color: white;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
        transition: opacity 0.3s ease;
        z-index: 9;
        background-color: rgba(128, 128, 128, 0.5);
        border-radius: 50%;
        width: 100px;
        height: 100px;
        line-height: 100px;
        text-align: center;
        padding-left: 10px;
    }
    
    .play-center-icon:hover {
        background-color: rgba(128, 128, 128, 0.7);
    }

    /* –°—Ç–∏–ª—å –¥–ª—è –ø–æ—Å—Ç–µ—Ä–∞ */
    .movie-poster-image-details {
        width: 100%;
        height: 100%;
        max-height: 95vh; 
        object-fit: contain; 
        display: block;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        border-radius: 0.375rem; 
    }
    
    /* –°—Ç–∏–ª—å –¥–ª—è –º–∏–∫—Ä–æ–Ω–∞–¥–ø–∏—Å–µ–π */
    .text-metadata {
        color: #6c757d !important; 
        font-weight: 500; 
    }

    /* –°–ï–¢–ö–ê (GRID) - –¢–û–õ–¨–ö–û –î–õ–Ø –í–ï–†–•–ù–ï–ì–û –†–Ø–î–ê */
    .main-info-grid {
        display: grid;
        grid-template-columns: 1fr 2fr; /* 1 —á–∞—Å—Ç—å –¥–ª—è –ø–æ—Å—Ç–µ—Ä–∞, 2 –¥–ª—è –∏–Ω—Ñ–æ/–æ–ø–∏—Å–∞–Ω–∏—è */
        gap: 30px;
        align-items: start;
    }
    
    .poster-column {
        grid-column: 1 / 2;
        min-height: 400px; /* –£–º–µ–Ω—å—à–∞–µ–º –º–∏–Ω–∏–º–∞–ª—å–Ω—É—é –≤—ã—Å–æ—Ç—É, —Ç–∞–∫ –∫–∞–∫ –ø–ª–µ–µ—Ä —É—à–µ–ª */
        display: flex; 
        align-items: center;
        justify-content: center;
    }
    
    .info-column {
        grid-column: 2 / 3;
    }

    /* --- –°–¢–ò–õ–ò –î–õ–Ø –°–ï–ê–ù–°–û–í (–°–û–•–†–ê–ù–ï–ù–´) --- */
    .session-card {
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .session-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .session-price {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--primary-color); 
    }
    
    .text-warning {
        color: #ffc107 !important; 
    }

    /* –ú–µ–¥–∏–∞-–∑–∞–ø—Ä–æ—Å—ã –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤ */
    @@media (max-width: 768px) {
        .main-info-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }
        .info-column {
            grid-row: 2;
        }
        .poster-column {
            grid-row: 1;
            min-height: auto;
        }
        .trailer-responsive-container {
             padding-bottom: 56.25%; 
        }
    }
</style>

<div class="fade-in">
    <div class="info-and-poster-container">
        <div class="main-info-grid">
            
            <div class="poster-column">
                @if (!string.IsNullOrEmpty(Model.PosterUrl))
                {
                    <img src="@Model.PosterUrl" alt="@Model.Title" class="movie-poster-image-details">
                }
            </div>

            <div class="info-column">
                
                <h1 class="display-4">@Model.Title</h1>
                <p class="lead text-metadata">@Model.Genre | @Model.Duration –º–∏–Ω</p>
                
                <hr class="my-3">
                <h2>–û–ø–∏—Å–∞–Ω–∏–µ</h2>
                <p>@Model.Description</p>
            </div>
            
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.TrailerUrl))
    {
        <div id="trailerContainer" class="trailer-responsive-container">
            <video id="movieTrailer"
                   src="@Url.Content($"~/videos/{Model.TrailerUrl}")" 
                   poster="@Model.PosterUrl"
                   muted 
                   playsinline 
                   controls>
                –í–∞—à –±—Ä–∞—É–∑–µ—Ä –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç —Ç–µ–≥ video.
            </video>

            <div id="playCenterIcon" class="play-center-icon">‚ñ∂</div>
        </div>
    }
    
    <div class="mt-5 fade-in">
        <h2 class="mb-4">
            <span style="border-left: 4px solid var(--primary-color); padding-left: 1rem;">
                üé´ –ë–ª–∏–∂–∞–π—à–∏–µ —Å–µ–∞–Ω—Å—ã
            </span>
        </h2>
        @if (Model.Sessions.Any())
        {
            <div class="row g-3">
                @foreach (var session in Model.Sessions)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="session-card">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <div class="text-warning">üïê @session.DateTime.ToString("dd.MM.yyyy HH:mm")</div>
                                    <div class="text-warning mt-1">üìç @session.HallName</div>
                                </div>
                                <div class="session-price">@session.Price.ToString("0.00") ‚ÇΩ</div>
                            </div>
                            <div>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a href="@Url.Action("SelectSeats", "Booking", new { sessionId = session.Id })" class="btn btn-primary w-100">
                                        ü™ë –í—ã–±—Ä–∞—Ç—å –º–µ—Å—Ç–∞
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Login", "Account")" class="btn btn-secondary w-100">
                                        üîë –í–æ–π—Ç–∏ –¥–ª—è –±—Ä–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <h5>üìÖ –ù–∞ –¥–∞–Ω–Ω—ã–π –º–æ–º–µ–Ω—Ç –Ω–µ—Ç –¥–æ—Å—Ç—É–ø–Ω—ã—Ö —Å–µ–∞–Ω—Å–æ–≤</h5>
                <p class="mb-0">–°–µ–∞–Ω—Å—ã –ø–æ—è–≤—è—Ç—Å—è –≤ –±–ª–∏–∂–∞–π—à–µ–µ –≤—Ä–µ–º—è!</p>
            </div>
        }
    </div>
    <div class="mt-4 mb-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            ‚Üê –ö —Å–ø–∏—Å–∫—É —Ñ–∏–ª—å–º–æ–≤
        </a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('trailerContainer');
            const video = document.getElementById('movieTrailer');
            const playCenterIcon = document.getElementById('playCenterIcon');

            if (!video) return; 

            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –ø–æ —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–º—É –∑–Ω–∞—á–∫—É Play
            playCenterIcon.addEventListener('click', () => {
                video.muted = false; 
                video.play();
            });

            // –°–æ–±—ã—Ç–∏–µ: –≤–∏–¥–µ–æ –Ω–∞—á–∞–ª–æ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç—å—Å—è
            video.addEventListener('play', () => {
                playCenterIcon.style.opacity = '0'; 
                playCenterIcon.style.pointerEvents = 'none'; 
            });

            // –°–æ–±—ã—Ç–∏–µ: –≤–∏–¥–µ–æ –ø–æ—Å—Ç–∞–≤–ª–µ–Ω–æ –Ω–∞ –ø–∞—É–∑—É
            video.addEventListener('pause', () => {
                playCenterIcon.style.opacity = '1'; 
                playCenterIcon.style.pointerEvents = 'auto'; 
            });

            // –ó–∞–ø—É—Å–∫–∞–µ–º –≤–∏–¥–µ–æ –Ω–∞ –º–∏–Ω–∏–º–∞–ª—å–Ω–æ–π –≥—Ä–æ–º–∫–æ—Å—Ç–∏, –∫–æ–≥–¥–∞ –æ–Ω–æ –≥–æ—Ç–æ–≤–æ, —á—Ç–æ–±—ã –∏–∑–±–µ–∂–∞—Ç—å –ø—Ä–æ–±–ª–µ–º —Å –∞–≤—Ç–æ–≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ–º
            video.addEventListener('loadeddata', () => {
                video.volume = 0.5; 
                video.muted = true; 
            });
        });
    </script>
}