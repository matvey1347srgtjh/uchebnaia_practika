                                </div>
                                <div class="session-price">@session.Price.ToString("0.00") ‚ÇΩ</div>
                            </div>
                            <div>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a href="@Url.Action("SelectSeats", "Booking", new { sessionId = session.Id })" class="btn btn-primary w-100">
