@model CinemaApp.ViewModels.MovieViewModel
@using System.Globalization 
@{
    ViewData["Title"] = Model.Title;
}

<style>
    
    .info-and-poster-container {
        
        background: linear-gradient(
            to left, 
            rgba(255, 0, 0, 0.1), 
            rgba(255, 255, 255, 0.05)
             
        );
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); 
        margin-bottom: 30px; 
        padding: 20px; 
    }
    
    
    .fade-in {
        padding-top: 30px; 
    }

    
    .trailer-responsive-container {
        position: relative; 
        width: 100%; 
        padding-bottom: 52.5%; 
        height: 0; 
        overflow: hidden; 
        margin-bottom: 40px; 
        
        background: black; 
        border-radius: 5px; 
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); 
    }
    
    .trailer-responsive-container video {
        position: absolute; 
        top: 0; 
        left: 0; 
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    
    .play-center-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        cursor: pointer;
        font-size: 5rem;
        opacity: 1;
        color: white;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
        transition: opacity 0.3s ease;
        z-index: 9;
        background-color: rgba(128, 128, 128, 0.5);
        border-radius: 50%;
        width: 100px;
        height: 100px;
        line-height: 100px;
        text-align: center;
        padding-left: 10px;
    }
    
    .play-center-icon:hover {
        background-color: rgba(128, 128, 128, 0.7);
    }

    
    .movie-poster-image-details {
        width: 100%;
        height: 100%;
        max-height: 95vh; 
        object-fit: contain; 
        display: block;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        border-radius: 0.375rem; 
    }
    
    
    .text-metadata {
        color: #6c757d !important; 
        font-weight: 500; 
    }

    
    .main-info-grid {
        display: grid;
        grid-template-columns: 1fr 2fr; 
        gap: 30px;
        align-items: start;
    }
    
    .poster-column {
        grid-column: 1 / 2;
        min-height: 400px; 
        display: flex; 
        align-items: center;
        justify-content: center;
    }
    
    .info-column {
        grid-column: 2 / 3;
    }

    
    .session-card {
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .session-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .session-price {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--primary-color); 
    }
    
    .text-warning {
        color: #ffc107 !important; 
    }

    
    @@media (max-width: 768px) {
        .main-info-grid {
            grid-template-columns: 1fr;
            gap: 15px;
        }
        .info-column {
            grid-row: 2;
        }
        .poster-column {
            grid-row: 1;
            min-height: auto;
        }
        .trailer-responsive-container {
             padding-bottom: 56.25%; 
        }
    }
</style>

<div class="fade-in">
    <div class="info-and-poster-container">
        <div class="main-info-grid">
            
            <div class="poster-column">
                @if (!string.IsNullOrEmpty(Model.PosterUrl))
                {
                    <img src="@Model.PosterUrl" alt="@Model.Title" class="movie-poster-image-details">
                }
            </div>

            <div class="info-column">
                <h1 class="display-4">@Model.Title</h1>
                <p class="lead text-metadata">@Model.Genre | @Model.Duration –º–∏–Ω</p>
                
                <hr class="my-3">
                <h2>–û–ø–∏—Å–∞–Ω–∏–µ</h2>
                <p>@Model.Description</p>
            </div>
            
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.TrailerUrl))
    {
        <div id="trailerContainer" class="trailer-responsive-container">
            <video id="movieTrailer"
                   src="@Url.Content($"~/videos/{Model.TrailerUrl}")" 
                   poster="@Model.PosterUrl"
                   muted 
