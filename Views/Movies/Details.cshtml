                <p class="mb-0">–°–µ–∞–Ω—Å—ã –ø–æ—è–≤—è—Ç—Å—è –≤ –±–ª–∏–∂–∞–π—à–µ–µ –≤—Ä–µ–º—è!</p>
            </div>
        }
    </div>
    <div class="mt-4 mb-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            ‚Üê –ö —Å–ø–∏—Å–∫—É —Ñ–∏–ª—å–º–æ–≤
        </a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('trailerContainer');
            const video = document.getElementById('movieTrailer');
            const playCenterIcon = document.getElementById('playCenterIcon');

            if (!video) return; 

            
            playCenterIcon.addEventListener('click', () => {
                video.muted = false; 
                video.play();
            });

            
            video.addEventListener('play', () => {
                playCenterIcon.style.opacity = '0'; 
                playCenterIcon.style.pointerEvents = 'none'; 
            });

            
            video.addEventListener('pause', () => {
                playCenterIcon.style.opacity = '1'; 
                playCenterIcon.style.pointerEvents = 'auto'; 
            });

            
            video.addEventListener('loadeddata', () => {
                video.volume = 0.5; 
                video.muted = true; 
            });
        });
    </script>
}