@model CinemaApp.Models.HeroSlide

@{
    ViewData["Title"] = "Добавить слайд";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Добавить слайд</h1>
        <p class="mb-0">Создайте новый элемент геро-слайдера для главной страницы.</p>
    </div>
    <a class="btn btn-outline-secondary" asp-action="HeroSlides">
        <i class="bi bi-arrow-left"></i> Назад к списку
    </a>
</div>

<form asp-action="CreateHeroSlide" method="post" class="card shadow-sm">
    <div class="card-body">
        <partial name="_HeroSlideForm" />
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-action="HeroSlides">Отмена</a>
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


