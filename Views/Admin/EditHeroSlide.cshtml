@model CinemaApp.Models.HeroSlide

@{
    ViewData["Title"] = "Редактировать слайд";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1">Редактировать слайд</h1>
        <p class="text mb-0">Обновите содержимое геро-слайдера для главной страницы.</p>
    </div>
    <a class="btn btn-outline-secondary" asp-action="HeroSlides">
        <i class="bi bi-arrow-left"></i> Назад к списку
    </a>
</div>

<form asp-action="EditHeroSlide" method="post" class="card shadow-sm">
    <div class="card-body">
        <input type="hidden" asp-for="Id" />
        <partial name="_HeroSlideForm" />
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-action="HeroSlides">Отмена</a>
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


