@model IEnumerable<CinemaApp.Models.Session>

@{
    ViewData["Title"] = "Управление сеансами";
}

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-2">Управление сеансами</h2>
            <div style="height: 4px; width: 150px; background: linear-gradient(90deg, var(--primary-color), var(--secondary-color)); border-radius: 2px;"></div>
        </div>
        <a asp-action="CreateSession" class="btn btn-primary">
            ➕ Добавить сеанс
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover" style="border-radius: 10px; overflow: hidden;">
                <thead style="background: var(--dark-surface-light);">
                    <tr>
                        <th>Фильм</th>
                        <th>Зал</th>
                        <th>Дата и время</th>
                        <th>Цена</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Movie.Title</strong></td>
                            <td>@item.Hall.Name</td>
                            <td>@item.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <span style="color: var(--secondary-color); font-weight: bold;">@item.Price.ToString("0.00") ₽</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditSession" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                                    <form asp-action="DeleteSession" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Вы уверены, что хотите удалить этот сеанс?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h5>Нет сеансов</h5>
            <p class="mb-0">Начните с добавления первого сеанса!</p>
        </div>
    }
</div>
