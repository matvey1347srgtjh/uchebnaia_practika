@* ------------------------------------------------------------------------------------------------------ *@
@* --- –°–ö–†–ò–ü–¢–´: –§—É–Ω–∫—Ü–∏—è –æ–ø–ª–∞—Ç—ã –∏ –¢–∞–π–º–µ—Ä –æ–±—Ä–∞—Ç–Ω–æ–≥–æ –æ—Ç—Å—á–µ—Ç–∞ --- *@
@* ------------------------------------------------------------------------------------------------------ *@
@section Scripts {
    <script>
        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –≤—Ä–µ–º–µ–Ω–∏ (mm:ss)
        function formatTime(milliseconds) {
            if (milliseconds < 0) return "00:00";
            const totalSeconds = Math.floor(milliseconds / 1000);
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = totalSeconds % 60;
            return `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }

        // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –≤—Å–µ—Ö —Ç–∞–π–º–µ—Ä–æ–≤
        function updateAllTimers() {
            let activeTimers = false;
            
            document.querySelectorAll('.card[data-reserved-until]').forEach(card => {
                const expirationTimeStr = card.getAttribute('data-reserved-until');
                const timerDisplay = card.querySelector('.reservation-timer');

                if (!expirationTimeStr || !timerDisplay) return;

                const expirationTime = new Date(expirationTimeStr).getTime();
                const now = new Date().getTime();
                const distance = expirationTime - now;

                if (distance > 0) {
                    // –í—Ä–µ–º—è –µ—â–µ –Ω–µ –∏—Å—Ç–µ–∫–ª–æ
                    timerDisplay.textContent = formatTime(distance);
                    activeTimers = true;
                    // –û–∫—Ä–∞—à–∏–≤–∞–µ–º —Ç–∞–π–º–µ—Ä –≤ –∫—Ä–∞—Å–Ω—ã–π, –∫–æ–≥–¥–∞ –æ—Å—Ç–∞–µ—Ç—Å—è –º–µ–Ω—å—à–µ 1 –º–∏–Ω—É—Ç—ã
                    if (distance < 60000) {
                        timerDisplay.closest('.alert').classList.add('bg-danger', 'text-white');
                        timerDisplay.closest('.alert').classList.remove('alert-danger');
                    }
                } else {
                    // –í—Ä–µ–º—è –∏—Å—Ç–µ–∫–ª–æ
                    timerDisplay.textContent = "–ò–°–¢–ï–ö–õ–û";
                    
                    // –°–∫—Ä—ã–≤–∞–µ–º –∫–∞—Ä—Ç–æ—á–∫—É –∏ –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç—Ä–∞–Ω–∏—Ü—É
                    const colParent = card.closest('.col-md-6.col-lg-4');
                    if (colParent) {
                        colParent.style.opacity = '0';
                        colParent.style.transition = 'opacity 1s';
                        setTimeout(() => {
                            colParent.style.display = 'none';
                            // –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∫–∞, —á—Ç–æ–±—ã –∫–æ–Ω—Ç—Ä–æ–ª–ª–µ—Ä –æ–±–Ω–æ–≤–∏–ª —Å–ø–∏—Å–æ–∫
                            window.location.reload(); 
                        }, 1000); 
                    }
                }
            });

            // –ï—Å–ª–∏ –µ—Å—Ç—å –∞–∫—Ç–∏–≤–Ω—ã–µ —Ç–∞–π–º–µ—Ä—ã, –ø—Ä–æ–¥–æ–ª–∂–∞–µ–º —Ü–∏–∫–ª, –∏–Ω–∞—á–µ –æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º
            if (activeTimers) {
                setTimeout(updateAllTimers, 1000);
            } else if (document.querySelectorAll('.card[data-reserved-until]').length > 0) {
                // –ï—Å–ª–∏ –Ω–µ—Ç –∞–∫—Ç–∏–≤–Ω—ã—Ö —Ç–∞–π–º–µ—Ä–æ–≤, –Ω–æ –±—ã–ª–∏ –∫–∞—Ä—Ç–æ—á–∫–∏, –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç—Ä–∞–Ω–∏—Ü—É —Å—Ä–∞–∑—É
                 setTimeout(() => {
                    window.location.reload(); 
                 }, 500); 
            }
        }

        // –ó–∞–ø—É—Å–∫–∞–µ–º —Ç–∞–π–º–µ—Ä—ã –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        window.addEventListener('load', updateAllTimers);


        // –õ–æ–≥–∏–∫–∞ –æ–ø–ª–∞—Ç—ã (–æ—Å—Ç–∞–≤–ª–µ–Ω–∞ –±–µ–∑ –∏–∑–º–µ–Ω–µ–Ω–∏–π)
        async function confirmPaymentFromProfile(buttonElement) {
            const ticketIdsStr = buttonElement.getAttribute('data-ticket-ids');
            if (!ticketIdsStr) {
                alert('–ù–µ—Ç ID –±–∏–ª–µ—Ç–æ–≤ –¥–ª—è –æ–ø–ª–∞—Ç—ã');
                return;
            }

            
            const initialText = buttonElement.textContent;
            buttonElement.disabled = true;
            buttonElement.textContent = '–û–±—Ä–∞–±–æ—Ç–∫–∞...';

            
            const ticketIds = ticketIdsStr.split(',').map(id => parseInt(id));

            try {
                
                const response = await fetch('/Booking/ConfirmPayment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(ticketIds)
                });

                const result = await response.json();

                if (result.success) {
                    alert('‚úÖ –û–ø–ª–∞—Ç–∞ —É—Å–ø–µ—à–Ω–æ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∞! –ë–∏–ª–µ—Ç —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω.');
                    
                    if (result.tickets && result.tickets.length > 0) {
                        window.location.href = `/Booking/Ticket/${result.tickets[0].id}`;
                    } else {
                        
                        window.location.href = '/Account/Profile';
                    }
                } else {
                    alert('‚ùå ' + (result.message || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–∏ –æ–ø–ª–∞—Ç—ã.'));
                    
                    
                    buttonElement.disabled = false;
                    buttonElement.textContent = initialText;
                    
                    
                    if (result.message && (result.message.includes('–∏—Å—Ç–µ–∫–ª–∞') || result.message.includes('–Ω–µ –Ω–∞–π–¥–µ–Ω–∞'))) {
                        window.location.reload();
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                alert('‚ùå –ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –æ–ø–ª–∞—Ç–µ.');
                buttonElement.disabled = false;
                buttonElement.textContent = initialText;
            }
        }
    </script>
}