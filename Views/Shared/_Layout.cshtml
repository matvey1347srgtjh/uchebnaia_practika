@using CinemaApp.Models
@using Microsoft.AspNetCore.Identity
@using System.Collections.Generic
@using System.Linq
@inject UserManager<ApplicationUser> UserManager
@inject CinemaApp.Repositories.IMovieRepository MovieRepository
@{
    ApplicationUser? currentUser = null;
    string? userInitial = null;
    IReadOnlyList<string>? allGenres = ViewData["Genres"] as IReadOnlyList<string>;
    if (allGenres is null || allGenres.Count == 0)
    {
        allGenres = await MovieRepository.GetGenresAsync();
    }
    string? selectedGenre = ViewData["SelectedGenre"] as string;
    string? minDurationValue = ViewData["MinDuration"]?.ToString();
    string? maxDurationValue = ViewData["MaxDuration"]?.ToString();
    var filterChips = (ViewData["FilterChips"] as IEnumerable<string>)?.Where(c => !string.IsNullOrWhiteSpace(c)).Select(c => c.Trim()).ToList() ?? new List<string>();
    int? resultsCount = ViewData["ResultsCount"] as int?;
    if (resultsCount is null && ViewData["ResultsCount"] is int rc)
    {
        resultsCount = rc;
    }
    var requestQueryValue = Context.Request.Query["query"].ToString();
    bool hasSearchStatus = filterChips.Any();
    if (!hasSearchStatus && !string.IsNullOrWhiteSpace(requestQueryValue))
    {
        filterChips.Add($"–ü–æ–∏—Å–∫: {requestQueryValue.Trim()}");
        hasSearchStatus = true;
    }
    string? searchStatusTitle = hasSearchStatus && resultsCount.HasValue ? $"–ù–∞–π–¥–µ–Ω–æ: {resultsCount.Value}" : null;

    if (User.Identity?.IsAuthenticated == true)
    {
        currentUser = await UserManager.GetUserAsync(User);
        var nameSource = currentUser?.FullName;
        if (string.IsNullOrWhiteSpace(nameSource))
        {
            nameSource = currentUser?.Email ?? currentUser?.UserName;
        }

        if (!string.IsNullOrWhiteSpace(nameSource))
        {
            var firstChar = nameSource.Trim()[0];
            userInitial = char.ToUpperInvariant(firstChar).ToString();
        }
    }
}
